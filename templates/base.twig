{% block html_head_container %}

    {% include 'html-header.twig' %}
    {% block head %}
    {% endblock %}
    </head>
{% endblock %}

<body class="{{ body_class }}" data-template="base.twig">
<a class="skip-link screen-reader-text sr-only" href="#content">{{ _e( 'Skip to content') }}</a>
<header class="header">
    {% block header %}
        {% include 'organisms/header.twig' %}
    {% endblock %}
</header>

<main id="content" role="main" class="content-wrapper">
    {% block pageTitle %}
        {% if title %}
            <div class="container">
                <div class="row">
                    <div class="col">
                        <h1>{{ title }}</h1>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endblock %}
    <div class="wrapper {{ sidebar_class }}">
        {% block content %}
            Sorry, no content
        {% endblock %}
    </div>
    </section>
    {% if sidebar %}
        <aside class="layout-sidebar">
            {{ sidebar }}
        </aside>
    {% endif %}
</main>

{% block footer %}
    <footer id="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    {% include 'footer.twig' %}
                </div>
            </div>
        </div>
    </footer>
    {{ function('wp_footer') }}
{% endblock %}
</body>
</html>
